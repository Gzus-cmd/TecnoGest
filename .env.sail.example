# ════════════════════════════════════════════════════════════════
# TecnoGest - Configuración para Laravel Sail (Docker)
# ════════════════════════════════════════════════════════════════
# Este archivo está preconfigurado para usar con Laravel Sail
# Cópialo a .env antes de iniciar Sail:
#   cp .env.sail.example .env
# ════════════════════════════════════════════════════════════════

APP_NAME=TecnoGest
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_ES

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# ──────────────────────────────────────────────────────────────
# Base de datos MySQL (Docker/Sail)
# ──────────────────────────────────────────────────────────────
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=informatica
DB_USERNAME=sail
DB_PASSWORD=password

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=redis
CACHE_PREFIX=tecnogest_

# ──────────────────────────────────────────────────────────────
# Redis (Docker/Sail)
# ──────────────────────────────────────────────────────────────
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="admin@tecnogest.com"
MAIL_FROM_NAME="${APP_NAME}"

VITE_APP_NAME="${APP_NAME}"

# ──────────────────────────────────────────────────────────────
# Sail (Docker)
# ──────────────────────────────────────────────────────────────
SAIL_XDEBUG_MODE=off
FORWARD_DB_PORT=3306
FORWARD_REDIS_PORT=6379
